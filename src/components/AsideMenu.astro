---
import LibraryIcon from "@/icons/Library.astro";
import HomeIcon from "@/icons/Home.astro";
import LogoIcon from "@/icons/Logo.astro";
import SearchIcon from "@/icons/Search.astro";
import AddIcon from "@/icons/Add.astro";
import SideMenuItem from "./SideMenuItem.astro";
import SideMenuCard from "./SideMenuCard.astro";

import { playlists } from "@/lib/data";
---

<nav class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg p-2">
    <ul>
      <SideMenuItem href="/#">
        <span class="text-white"><LogoIcon /></span>
      </SideMenuItem>
      <SideMenuItem href="/">
        <HomeIcon />
        Home
      </SideMenuItem>
      <SideMenuItem href="/#">
        <SearchIcon />
        Search
      </SideMenuItem>
    </ul>
  </div>
  <div class="bg-zinc-900 rounded-lg p-2 flex-1">
    <ul class="">
      <div class="flex items-center justify-between">
        <SideMenuItem>
          <LibraryIcon href="/" />
          Your Library
        </SideMenuItem>
        <div class="ml-2 hover:bg-zinc-800 rounded-full">
          <SideMenuItem>
            <AddIcon href="#" />
          </SideMenuItem>
        </div>
      </div>

      {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
      
    </ul>
  </div>
</nav>
